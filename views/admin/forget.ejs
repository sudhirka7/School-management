<% layout("layouts/boilerplate.ejs") %>
<br><br><br>
<div class="flex items-center justify-center min-h-screen">
    <div class="bg-gray-100   p-8 rounded-2xl shadow-md w-full max-w-md">
        <h1 class="text-2xl font-bold text-center mb-6 text-gray-700">Forgot Password</h1>
        <form action="/admin/forget" method="POST" class="space-y-4">
            <div>
                <label class="block text-gray-600 font-medium mb-1">Name</label>
                <input type="text" name="name" required
                       class="w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500" />
            </div>

            <div>
                <label class="block text-gray-600 font-medium mb-1">Email</label>
                <input type="email" name="email" required
                       class="w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500" />
            </div>

            <div>
                <label class="block text-gray-600 font-medium mb-1">New Password</label>
                <input type="password" name="password" required
                       class="w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500" />
            </div>

            <button type="submit"
                    class="w-full bg-blue-600 text-white py-2 rounded-lg hover:bg-blue-700 transition duration-300">
                Reset Password
            </button>
        </form>
    </div>
</div>
<br><br><br>