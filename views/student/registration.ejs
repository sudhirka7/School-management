<% layout("layouts/boilerplate.ejs") %>
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg">
                <div class="card-header bg-primary text-white text-center">
                    <h2>Student Registration</h2>
                </div>
                <div class="card-body">
                    <form action="/student/register" method="POST">
                        <!-- Name -->
                        <div class="mb-2">
                            <label class="form-label">Name:</label>
                            <input type="text" name="student[name]" class="form-control" required />
                        </div>

                        <!-- Email -->
                        <div class="mb-2">
                            <label class="form-label">Email:</label>
                            <input type="email" name="student[email]" class="form-control" required />
                        </div>

                        <!-- Student ID (Registration No.) -->
                        <div class="mb-2">
                            <label class="form-label">Registration No.:</label>
                            <input type="number" name="student[studentId]" class="form-control" required />
                        </div>

                        <!-- Branch -->
                        <div class="mb-2">
                            <label class="form-label">Branch:</label>
                            <select name="student[branch]" id="department" class="form-control" required>
                                <option value="" disabled selected>Select Branch</option>
                                <option value="Computer Science & Engineering">Computer Science & Engineering</option>
                                <option value="Electrical Engineering">Electrical Engineering</option>
                                <option value="Mechanical Engineering">Mechanical Engineering</option>
                                <option value="Electronics Engineering">Electronics Engineering</option>
                                <option value="Civil Engineering">Civil Engineering</option>
                            </select>
                        </div>

                        <!-- Semester -->
                        <div class="mb-2">
                            <label class="form-label">Semester:</label>
                            <select name="student[semester]" id="sem" class="form-control" required>
                                <option value="" disabled selected>Select Your semester</option>
                                <option value="First Semester">First sem</option>
                                <option value="Second Semester">Second sem</option>
                                <option value="Three Semester">Three sem</option>
                                <option value="Fourth Semester">Fourth sem</option>
                                <option value="Fifth Semester">Fifth sem</option>
                                <option value="Six Semester">Six sem</option>
                            </select> 
                        </div>

                        <!-- Roll No -->
                        <div class="mb-2">
                            <label class="form-label">Roll No:</label>
                            <input type="text" name="student[roll_no]" class="form-control"  required />
                        </div>

                        <!-- Gender -->
                        <div class="mb-2">
                            <label class="form-label">Gender:</label> <br>
                            <label for="100"><input type="radio" id="100" name="student[gender]" value="Male" required> Male</label>
                            <label for="101"><input type="radio" id="101" name="student[gender]" value="Female"> Female</label>
                            <label for="102"><input type="radio" id="102" name="student[gender]" value="Other"> Other</label>
                        </div>

                        <!-- Address -->
                        <div class="mb-2">
                            <label for="105" class="form-label">Address:</label>
                            <textarea name="student[adress]" class="form-control" id="105" required></textarea>
                        </div>

                        <!-- Home District -->
                        <div class="mb-2">
                            <label class="form-label">Home District:</label>
                            <input type="text" name="student[district]" class="form-control" required />
                        </div>

                        <!-- Parent's Name -->
                        <div class="mb-2">
                            <label class="form-label">Father's Name:</label>
                            <input type="text" name="student[father_name]" class="form-control" required />
                        </div>
                        <div class="mb-2">
                            <label class="form-label">Mother's Name:</label>
                            <input type="text" name="student[mother_name]" class="form-control" required />
                        </div>
                        <!-- Parent's Contact No -->
                        <div class="mb-2">
                            <label class="form-label">Parent's Contact No:</label>
                            <input type="text" name="student[father_contact]" class="form-control" pattern="[0-9]{10}" title="Enter a 10-digit number" required />
                        </div>

                        <!-- Contact No -->
                        <div class="mb-2">
                            <label class="form-label">Contact No:</label>
                            <input type="text" name="student[contact_no]" class="form-control" pattern="[0-9]{10}" title="Enter a 10-digit number" required />
                        </div>

                        <!-- Date of Birth -->
                        <div class="mb-2">
                            <label class="form-label">D.O.B:</label>
                            <input type="date" name="student[date_of_birth]" class="form-control" required />
                        </div>

                        <!-- Submit Button -->
                        <div class="text-center">
                            <button type="submit" class="btn btn-primary w-100">Register</button>
                        </div>

                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
