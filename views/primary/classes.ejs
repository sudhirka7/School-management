<% layout('layouts/boilerplate.ejs') %>
<!-- Features Section -->
<section class="py-10 bg-gray-100">
    <br><br>
    <div class="container mx-auto px-4">
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6 text-center">
            <% const features=["Dance", "Paiting" , "Physical Activity" ,"Singing","Yoga", "Zumba" ,"Events"]; %>
                <% features.forEach(function(style) { %>
                    <div class="bg-white shadow-lg rounded-lg p-6">
                        <h3 class="text-2xl font-semibold text-gray-800">
                            <%= style %>
                        </h3>

                        <p class="text-gray-600 mt-2">The No of Student in <%= style %> is <span>150</span></p>
                        <p class="text-gray-600 mt-2">Learn <%= style %> with expert instructors.</p>
                        <a href="/enrollstudent"
                            class="mt-4 inline-block bg-blue-500 text-white px-5 py-2 rounded-lg hover:bg-blue-600 transition duration-300">Join
                            Now</a>
                    </div>
                    <% }); %>
        </div>
    </div>
    <br><br>
</section>
